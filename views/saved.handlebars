{{#each article}}
<div class="row">
  <div class="col s12">

    <div class="card horizontal" data-id={{_id}}>
      <div class="card-stacked">
        <a href={{link}}><img class="articleImg" src={{img}} alt="Link Image"><h2>{{title}}</h2></a>
        <div class="card-content">

          <h4>Notes
            <hr>
          </h4>
          {{#each note}}
          <div class="note">
            <h5>{{text}}<button class="btn deleteNote" data-id={{_id}}>Delete</button></h5>
            
          </div>
          
          {{/each}}
          <hr>
        </div>
        <div class="card-action">
          <a data-target="modal1" class="buttonFloatRight notesButton btn modal-trigger" data-id={{_id}}>Notes</a>
          <button class="btn removeSave buttonFloatRight" data-id={{_id}} href="/remove">Remove</button>
        </div>
      </div>
    </div>
  </div>
</div>

{{/each}}

<div id="modal1" class="modal">
  <div class="modal-content">
    <h4>Enter Note</h4>
    <div class="row">
      <form class="col s12">
        <div class="row">
          <div class="input-field col s12">
            <textarea id="noteText" class="materialize-textarea"></textarea>
            <label for="noteText">Enter Note Here</label>
          </div>
          <button class="btn waves-effect waves-light addNote" type="submit">Submit
            <i class="material-icons right">send</i>
          </button>
        </div>
      </form>
    </div>
  </div>
  <div class="modal-footer">
    <a href="#!" class="modal-close waves-effect waves-green btn-flat">Close</a>
  </div>
</div>